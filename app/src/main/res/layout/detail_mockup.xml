<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ev_matchDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ev_homeBadge"
                android:layout_width="144dp"
                android:layout_height="76dp"
                android:layout_weight="3" />

            <TextView
                android:id="@+id/ev_scoreTotal"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingTop="15dp"
                android:text="VS"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ev_awayBadge"
                android:layout_width="144dp"
                android:layout_height="76dp"
                android:layout_weight="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/ev_homeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingRight="10dp"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ev_awayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GoalScorer"
            android:textAlignment="center"
            android:textStyle="bold" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_blue_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ev_homeGoalScorer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:lineSpacingExtra="4sp"
                android:paddingLeft="20dp"
                android:textAlignment="textStart"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/ev_awayGoalScorer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:lineSpacingExtra="4sp"
                android:paddingRight="20dp"
                android:textAlignment="viewEnd"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Starting Lineup"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:layout_editor_absoluteY="166dp" />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_blue_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ev_homeGK"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:lineSpacingExtra="4sp"
                android:paddingLeft="20dp"
                android:textAlignment="textStart"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="20dp"
                android:text="GK"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ev_awayGK"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:lineSpacingExtra="4sp"
                android:paddingRight="20dp"
                android:textAlignment="textEnd" />

        </LinearLayout>

        <View
            android:id="@+id/view8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_blue_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ev_homeDF"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:lineSpacingExtra="4sp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:textAlignment="textStart"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/df"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="20dp"
                android:text="DF"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ev_awayDF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:lineSpacingExtra="4sp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:textAlignment="textEnd" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ev_homeMF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:lineSpacingExtra="4sp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/mf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="20dp"
                android:text="MF"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ev_awayMF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:lineSpacingExtra="4sp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:textAlignment="textEnd" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ev_homeFW"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:lineSpacingExtra="4sp"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/fw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="20dp"
                android:text="FW"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ev_awayFW"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:lineSpacingExtra="4sp"
                android:paddingBottom="5dp"
                android:paddingRight="20dp"
                android:textAlignment="textEnd" />

        </LinearLayout>

        <View
            android:id="@+id/view9"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_blue_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ev_homeSubs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:lineSpacingExtra="4sp"
                android:paddingLeft="20dp"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/sub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="20dp"
                android:text="Subsitute"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ev_awaySubs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:lineSpacingExtra="4sp"
                android:paddingRight="20dp"
                android:textAlignment="textEnd" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>